<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:app = "http://schemas.android.com/apk/res-auto"
        xmlns:tools = "http://schemas.android.com/tools"
        android:id = "@+id/game_container"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:clipChildren = "false"
        android:clipToPadding = "false">


    <!--
        //#######################################
        //
        // Gets swapped out with new BG
        //
        //#######################################
    -->
    <com.genesyseast.coinconnection.CustomControls.ImageEffect
            android:id = "@+id/boardBackground"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:contentDescription = "@null"
            android:scaleType = "centerCrop"
            app:blur_radius = "4.0"
            app:effect = "blur"
            app:srcCompat = "@drawable/ocean_1" />


    <!--
        &lt;!&ndash;
        //#############################
        //
        // Where the BG slots are
        // drawn. Not required for
        // cards
        //
        //#############################
        &ndash;&gt;
        <ImageView
                android:id = "@+id/boardGridSlots"
                android:layout_width = "@dimen/GRID_WIDTH"
                android:layout_height = "@dimen/GRID_HEIGHT"
                android:clipChildren = "false"
                android:clipToPadding = "false"
                android:contentDescription = "@null"
                app:layout_constraintBottom_toBottomOf = "@id/boardGridLayout"
                app:layout_constraintEnd_toEndOf = "@id/boardGridLayout"
                app:layout_constraintStart_toStartOf = "@id/boardGridLayout"
                app:layout_constraintTop_toTopOf = "@id/boardGridLayout"
                tools:background = "@drawable/level_02"
                tools:srcCompat = "@drawable/level_02" />

    -->

    <!--
    //#############################
    //
    // Draw the Board's BG to this
    //
    //#############################
    -->
    <com.genesyseast.coinconnection.CustomControls.GridLayoutView
            android:id = "@+id/boardGrid"
            android:layout_width = "@dimen/BOARD_WIDTH"
            android:layout_height = "@dimen/BOARD_HEIGHT"
            app:layout_constraintBottom_toBottomOf = "@id/boardGridLayout"
            app:layout_constraintEnd_toEndOf = "@id/boardGridLayout"
            app:layout_constraintStart_toStartOf = "@id/boardGridLayout"
            app:layout_constraintTop_toTopOf = "@id/boardGridLayout"
            tools:background = "#7F000000" />


    <!--
    //#############################
    //
    // Playing field: grid
    //
    //#############################
    -->
    <com.genesyseast.coinconnection.GameGraphics.ConnectionsGridLayout
            android:id = "@+id/boardGridLayout"
            android:layout_width = "@dimen/GRID_WIDTH"
            android:layout_height = "@dimen/GRID_HEIGHT"
            android:clipChildren = "false"
            android:clipToPadding = "false"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintVertical_bias = ".4" />


    <!--
    //#############################
    //
    // Mask the grid and top of
    // screen to create an illusion
    // of tiles passing through a
    // portal
    //
    //#############################
    -->
    <com.genesyseast.coinconnection.CustomControls.OverlayView
            android:id = "@+id/gridMask"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent" />


    <!--
    //#############################
    //
    // Where the Animations happen
    //
    //#############################
    -->
    <FrameLayout
            android:id = "@+id/boardGridSpecials"
            android:layout_width = "@dimen/GRID_WIDTH"
            android:layout_height = "@dimen/GRID_HEIGHT"
            android:clipChildren = "false"
            app:layout_constraintBottom_toBottomOf = "@id/boardGridLayout"
            app:layout_constraintEnd_toEndOf = "@id/boardGridLayout"
            app:layout_constraintStart_toStartOf = "@id/boardGridLayout"
            app:layout_constraintTop_toTopOf = "@id/boardGridLayout" />


    <!--
    //#############################
    //
    // Top Bar with stars, buttons
    //
    //#############################
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/topFrame"
            android:layout_width = "match_parent"
            android:layout_height = "@dimen/_48sdp"
            android:clipChildren = "false"
            android:clipToPadding = "false"
            android:paddingTop = "@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent">


        <!--
            //#######################################
            //
            // Star Gauge
            //
            //#######################################
        -->
        <com.genesyseast.coinconnection.CustomControls.StarsEarnedBar
                android:id = "@+id/starsToEarn"
                android:layout_width = "0dp"
                android:layout_height = "@dimen/_16sdp"
                android:background = "@drawable/progress_frame"
                android:paddingStart = "@dimen/_2sdp"
                android:paddingTop = "@dimen/_2sdp"
                android:paddingEnd = "@dimen/_2sdp"
                android:paddingBottom = "@dimen/_2sdp"
                android:thumb = "@null"
                app:layout_constraintBottom_toBottomOf = "@id/pauseButton"
                app:layout_constraintDimensionRatio = "12:1"
                app:layout_constraintEnd_toStartOf = "@id/pauseButton"
                app:layout_constraintHorizontal_bias = "0.451"
                app:layout_constraintStart_toEndOf = "@id/timeMovesFrame"
                app:layout_constraintTop_toTopOf = "@id/pauseButton"
                app:progressDrawable = "@drawable/progress_yellow"
                app:tickMarkOff = "@drawable/progress_star_off"
                app:tickMarkOn = "@drawable/progress_star_on"
                tools:max = "5000"
                tools:progress = "2190"
                tools:starPositions = "300,1900,4500" />


        <!--
        //#############################
        //
        // Board Moves
        //
        //#############################
        -->
        <FrameLayout
                android:id = "@+id/timeMovesFrame"
                android:layout_width = "@dimen/_40sdp"
                android:layout_height = "@dimen/_38sdp"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintHorizontal_bias = ".05"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"
                app:layout_constraintVertical_bias = ".03">

            <com.genesyseast.coinconnection.CustomControls.GradientTextView
                    android:id = "@+id/boardMovesText"
                    android:layout_width = "@dimen/_38sdp"
                    android:layout_height = "@dimen/_38sdp"
                    android:layout_gravity = "center"
                    android:background = "@drawable/dot_green"
                    android:contentDescription = "@null"
                    android:gravity = "center"
                    android:textColor = "@color/counterText"
                    android:textSize = "@dimen/_12ssp"
                    android:textStyle = "bold"
                    app:isButton = "false"
                    app:strokeColor = "@color/counterStroke"
                    app:strokeWidth = "@dimen/_3sdp"
                    tools:text = "20:00" />

            <com.genesyseast.coinconnection.CustomControls.GradientTextView
                    android:id="@+id/boardMovesLabel"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_gravity = "center_horizontal"
                    android:fontFamily = "@font/badaga"
                    android:textColor = "@android:color/white"
                    android:textSize = "@dimen/_10ssp"
                    android:textStyle = "bold"
                    android:translationY = "@dimen/_26sdp"
                    app:strokeColor = "@android:color/black"
                    app:strokeWidth = "@dimen/_3sdp"
                    app:textAllCaps = "true"
                    tools:text = "@string/moves_text" />
        </FrameLayout>


        <!--
        //#############################
        //
        // Pause Button
        //
        //#############################
        -->
        <com.genesyseast.coinconnection.CustomControls.GradientTextView
                android:id = "@+id/pauseButton"
                android:layout_width = "@dimen/_36sdp"
                android:layout_height = "@dimen/_36sdp"
                android:background = "@drawable/icon_pause"
                app:isButton = "true"
                app:layout_constraintBottom_toBottomOf = "parent"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintHorizontal_bias = ".95"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf = "parent"
                app:layout_constraintVertical_bias = ".03" />

    </androidx.constraintlayout.widget.ConstraintLayout>


